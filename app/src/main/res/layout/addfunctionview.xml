<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/steel_background_2_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="188dp"
            android:layout_height="68dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            
            android:text="@string/add_function_text"
            android:textColor="@android:color/white" >

            <requestFocus />
        </EditText>
               
    </LinearLayout>
    
    

    <Spinner
        android:id="@+id/function_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

   
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/null_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/null_text" />

            <RadioButton
                android:id="@+id/text_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_box_text" />

            <RadioButton
                android:id="@+id/variable_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/variable_chooser_text" />

            <RadioButton
                android:id="@+id/direction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direction_chooser_text" />
        </RadioGroup>
        
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true" >

        <EditText
            android:id="@+id/text_box_edit"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/direction_spinner"
            android:layout_width="227dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="2" />

        <Spinner
            android:id="@+id/variable_spinner"
            android:layout_width="234dp"
            android:layout_height="43dp"
            android:layout_column="1"
            android:layout_row="1" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="93dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="2"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:text="@string/direction_text"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="97dp"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:text="@string/text_text"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="95dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:text="@string/variable_text"
            android:textColor="@android:color/white" />

    </GridLayout>

    <Button
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/done_text" />

</LinearLayout>