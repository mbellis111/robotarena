<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="7"
    android:orientation="vertical"
    android:background="@drawable/steel_background_2_small" >

    <Space
        android:layout_width="44dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="27dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="73dp"
        android:layout_column="0"
        android:layout_row="1" />

    <Space
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:layout_width="36dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="106dp"
        android:layout_height="1dp"
        android:layout_column="5"
        android:layout_row="0" />

    <Space
        android:layout_width="226dp"
        android:layout_height="204dp"
        android:layout_column="6"
        android:layout_row="4" />

    <EditText
        android:id="@+id/gameover_end_text"
        android:layout_width="194dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="25"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="@string/game_over_text"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/gameover_winner"
        android:layout_width="228dp"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="1"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="none"
        android:text="@string/game_over_text"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/gameover_home_button"
        android:layout_width="262dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="@string/home_screen_text" />

    <TextView
        android:id="@+id/stat_text"
        android:layout_width="262dp"
        android:layout_height="325dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:textSize="12sp" />

</GridLayout>